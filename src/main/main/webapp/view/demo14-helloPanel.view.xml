<?xml version="1.0" encoding="UTF-8"?>
<mvc:View
	controllerName="sap.ui.demo.wt.controller.demo14"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true">
	
	<Panel headerText="{/recipient/helloPanelText}"
						class="sapUiResponsiveMargin" width="auto">
						<content>
							<Button
								text="Say Hello"
								press="onShowHello"
								class="sapUiSmallMarginEnd"/>
							<Input
								value="{/recipient/name}"
								description="Hello {/recipient/name}"
								valueLiveUpdate="true"
								width="60%"
								/>
						</content>
	</Panel>
</mvc:View>